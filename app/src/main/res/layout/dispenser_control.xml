                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- РџРѕР»Рµ РґР»СЏ РѕС‚РѕР±СЂР°Р¶РµРЅРёСЏ РєРѕР»РёС‡РµСЃС‚РІР° РѕС‚РїСѓС‰РµРЅРѕРіРѕ РїСЂРѕРґСѓРєС‚Р° РІ Р»РёС‚СЂР°С… -->

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/idDispenserControlLitres_text"
                        android:layout_width="140dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/textDispenserControl_litres"
                        android:textColor="#CCCCCC"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5dp" >

                        <TextView
                            android:id="@+id/idDispenserControlLitres"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="0dip"
                            android:layout_marginRight="2dip"
                            android:layout_weight="0"
                            android:gravity="right"
                            android:text="0000,00"
                            android:textColor="#000000"
                            android:textSize="45dp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- РџРѕР»Рµ РґР»СЏ РѕС‚РѕР±СЂР°Р¶РµРЅРёСЏ С†РµРЅС‹ РїСЂРѕРґСѓРєС‚Р° -->

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/idDispenserControlPrice_text"
                        android:layout_width="140dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/textDispenserControl_price"
                        android:textColor="#CCCCCC"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5dp" >

                        <TextView
                            android:id="@+id/idDispenserControlPrice"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="-2dip"
                            android:layout_marginRight="2dip"
                            android:gravity="right"
                            android:text="000.00"
                            android:textColor="#000000"
                            android:textSize="45dp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
            </LinearLayout>
            </FrameLayout>
            
	        <!-- Р РёСЃСѓСЋ Р»РёРЅРёСЋ РґР»СЏ С‚РѕРіРѕ, С‡С‚РѕР±С‹ СЃРѕРґРµСЂР¶РёРјРѕРµ СЃС‚СЂР°РЅРёС†С‹ Р±С‹Р»Рѕ СЂР°Р·РІС‘СЂРЅСѓС‚Рѕ РїРѕ РІСЃРµР№ С€РёСЂРёРЅРµ СЃС‚СЂР°РЅРёС†С‹ -->

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#000000" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#3E6BB1"
                    android:orientation="vertical" >

	                <!-- РџРѕР»Рµ РґР»СЏ РѕС‚РѕР±СЂР°Р¶РµРЅРёСЏ СЃРѕСЃС‚РѕСЏРЅРёСЏ Р·Р°РєР°Р·Р° -->

		            <FrameLayout
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content" >

		                <ImageView
		                    android:id="@+id/line_item_image4"
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:scaleType="center"
		                    android:src="@drawable/dispcontrol_message_screen" />
		
		                <LinearLayout
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:layout_gravity="center"
		                    android:gravity="center"
		                    android:orientation="horizontal" >
		
		                    <ImageView
		                        android:id="@+id/idImageNozzleStatus"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_gravity="center_vertical|left"
		                        android:layout_marginLeft="5dip"
		                        android:scaleType="center"
		                        android:src="@drawable/nozzle_up" />
		
			                <LinearLayout
		                        android:layout_marginLeft="5dip"
			                    android:layout_width="fill_parent"
			                    android:layout_height="match_parent"
			                    android:orientation="vertical" >
		
			                    <TextView
			                        android:id="@+id/idTextDispenserControlMessageTitle"
			                        android:layout_width="match_parent"
			                        android:layout_height="wrap_content"
			                        android:layout_gravity="center_horizontal"
			                        android:gravity="center_vertical|center_horizontal"
			                        android:text="@string/titleDispenserControlOrderState"
			                        android:textColor="#FFFFFF"
			                        android:textSize="16dp"
			                        android:textStyle="bold"
			                        android:typeface="serif" />
			
			                    <TextView
			                        android:id="@+id/idTextDispenserControlMessage"
			                        android:layout_width="match_parent"
			                        android:layout_height="fill_parent"
			                        android:gravity="center_vertical|center_horizontal"
			                        android:text="РћС‚РїСѓСЃРє РѕРєРѕРЅС‡РµРЅ, РЅСѓР¶РЅРѕ РѕРїР»Р°С‚РёС‚СЊ Р·Р°РєР°Р·"
			                        android:textColor="#FBFB04"
			                        android:textSize="16dp"
			                        android:textStyle="bold"
			                        android:typeface="serif" />
							</LinearLayout>
		                </LinearLayout>
		            </FrameLayout>
		
		            
		            <!-- РџРѕР»Рµ РґР»СЏ РѕС‚РѕР±СЂР°Р¶РµРЅРёСЏ РєРЅРѕРїРѕРє "РџСѓСЃРє" "РЎС‚РѕРї" -->
		
		            <FrameLayout
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content" >
		
		                <LinearLayout
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:orientation="horizontal" >
		
		                    <Button
		                        android:id="@+id/button_start"
		                        style="@style/ButtonText"
		                        android:layout_width="fill_parent"
