<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="400dip"
        android:layout_marginTop="80dp"
        android:background="#000000" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

	        <!-- Р РёСЃСѓСЋ Р»РёРЅРёСЋ РґР»СЏ С‚РѕРіРѕ, С‡С‚РѕР±С‹ СЃРѕРґРµСЂР¶РёРјРѕРµ СЃС‚СЂР°РЅРёС†С‹ Р±С‹Р»Рѕ СЂР°Р·РІС‘СЂРЅСѓС‚Рѕ РїРѕ РІСЃРµР№ С€РёСЂРёРЅРµ СЃС‚СЂР°РЅРёС†С‹ -->
	        <ImageView
	            android:id="@+id/line_item_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:scaleType="center"
	            android:src="@drawable/line" />
            
            <!-- РџРѕР»Рµ РґР»СЏ РѕС‚РѕР±СЂР°Р¶РµРЅРёСЏ РёРЅС„РѕСЂРјР°С†РёРё Рѕ Р·Р°РєР°Р·Рµ -->
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:background="#000000" >

                <ImageView
                    android:id="@+id/line_item_image2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="center"
                    android:src="@drawable/order_screen" />

	                <LinearLayout
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_gravity="left|top"
	                    android:layout_marginLeft="10dip"
	                    android:layout_marginTop="5dip"
	                    android:orientation="horizontal" >

	                    <TextView
	                        android:id="@+id/idDispenserControlOrderNameTitle"
	                        android:layout_width="fill_parent"
	                        android:layout_height="fill_parent"
	                        android:layout_gravity="left"
	                        android:layout_marginLeft="0dip"
	                        android:layout_weight="0.3"
	                        android:gravity="left|center|bottom"
                        	android:text="@string/titleDispenserControlOrderProduct"
	                        android:textColor="#1F5274"
	                        android:textSize="22dp"
	                        android:textStyle="bold"
	                        android:typeface="serif" />

	                    <TextView
	                        android:id="@+id/idDispenserControlOrderName"
	                        android:layout_width="fill_parent"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center"
	                        android:layout_weight="0.3"
	                        android:gravity="center"
	                        android:text="Euro-5"
	                        android:textColor="#1F5274"
	                        android:textSize="22dp"
	                        android:textStyle="bold"
	                        android:typeface="serif" />

	                </LinearLayout>
                    
	                <LinearLayout
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_gravity="bottom|left"
	                    android:layout_marginBottom="5dip"
	                    android:layout_marginLeft="10dip"
	                    android:orientation="horizontal" >

	                    <TextView
	                        android:id="@+id/idDispenserControlOrderAmountTitle"
	                        android:layout_width="fill_parent"
	                        android:layout_height="fill_parent"
	                        android:layout_gravity="left"
	                        android:layout_marginLeft="0dip"
	                        android:layout_weight="0.3"
	                        android:gravity="left"
                        	android:text="@string/titleDispenserControlOrderAmount"
	                        android:textColor="#3A92CB"
	                        android:textSize="18dp"
	                        android:textStyle="bold|italic"
	                        android:typeface="serif" />

	                    <TextView
	                        android:id="@+id/idDispenserControlOrderAmount"
	                        android:layout_width="fill_parent"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center"
	                        android:layout_weight="0.3"
	                        android:gravity="center"
	                        android:text="РџРѕР»РЅС‹Р№ Р±Р°Рє"
	                        android:textColor="#3A92CB"
	                        android:textSize="18dp"
	                        android:textStyle="bold"
	                        android:typeface="serif" />
	                    	                    
	                </LinearLayout>

            </FrameLayout>
            
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp" >
		        		
	        <ImageView
	            android:id="@+id/line_item_image3"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_gravity="left"
	            android:layout_marginLeft="-20dip"
	            android:scaleType="center"
	            android:src="@drawable/oreder_sate_screen" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

	        
            <!-- РџРѕР»Рµ РґР»СЏ РѕС‚РѕР±СЂР°Р¶РµРЅРёСЏ СЃСѓРјРјС‹ РѕС‚РїСѓСЃРєР°РµРјРѕР№ РґРѕР·С‹ -->

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/idDispenserControlSumm_text"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/textDispenserControl_summ"
                        android:textColor="#CCCCCC"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="top"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dip" >

                        <TextView
                            android:id="@+id/idDispenserControlSumm"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="0dip"
                            android:layout_marginRight="2dip"
                            android:layout_weight="0"
                            android:gravity="right"
                            android:text="0000,00"
                            android:textColor="#000000"
                            android:textSize="45dp"
